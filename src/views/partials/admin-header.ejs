<header class="bg-primary text-white shadow-sm">
  <div class="max-w-7xl mx-auto flex justify-between items-center px-4 sm:px-6 lg:px-10 h-16">
    
    <!-- Logo -->
    <a href="/admin/dashboard" class="flex items-center space-x-2">
      <img src="/images/logo.png" alt="TechMend Logo" class="h-20 w-auto" />
      <span class="text-white font-bold text-lg hidden sm:inline">Admin Panel</span>
    </a>

    <!-- Desktop Navigation -->
    <nav class="hidden sm:flex items-center space-x-6 text-sm font-medium">
      <a href="/admin/dashboard" class="hover:text-secondary transition-colors">Dashboard</a>

      <form action="/admin/Logout" method="post">
        <button 
          type="submit" 
          class="hover:text-accent transition-colors">
          Logout
        </button>
      </form>
    </nav>

    <!-- Mobile Menu Button -->
    <button id="admin-menu-btn" class="sm:hidden text-white focus:outline-none">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
          d="M4 6h16M4 12h16M4 18h16" />
      </svg>
    </button>
  </div>

  <!-- Mobile Dropdown -->
  <div id="admin-menu" class="hidden sm:hidden flex flex-col bg-primary text-white px-4 pb-3 border-t border-neutral/20">
    <a href="/admin/dashboard" class="py-2 hover:text-secondary transition-colors">Dashboard</a>
    <form action="/admin/Logout" method="post" class="py-1">
      <button 
        type="submit" 
        class="hover:text-accent transition-colors">
        Logout
      </button>
    </form>
  </div>

  <script>
    // Mobile menu toggle
    document.addEventListener('DOMContentLoaded', () => {
      const btn = document.getElementById('admin-menu-btn');
      const menu = document.getElementById('admin-menu');
      btn.addEventListener('click', () => {
        menu.classList.toggle('hidden');
      });
    });
  </script>
</header>
