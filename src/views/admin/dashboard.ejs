<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Admin Dashboard - TechMend</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 text-gray-800">
  <header class="bg-white shadow p-4 flex justify-between items-center">
    <h1 class="text-2xl font-semibold">TechMend Admin</h1>
    <form action="/admin/Logout" method="post">
<button type="submit">Logout</button>

    </form>
  </header>

  <main class="p-6">
    <h2 class="text-xl font-medium mb-4">Repair Requests</h2>
    <div class="bg-white shadow rounded-lg overflow-hidden">
      <table class="min-w-full text-sm">
        <thead class="bg-gray-200 text-gray-600">
          <tr>
            <th class="px-4 py-2 text-left">Name</th>
            <th class="px-4 py-2 text-left">Email</th>
            <th class="px-4 py-2 text-left">Issue</th>
            <th class="px-4 py-2 text-left">Status</th>
            <th class="px-4 py-2 text-left">Action</th>
          </tr>
        </thead>
        <tbody>
          <% requests.forEach(request => { %>
          <tr class="border-t">
            <td class="px-4 py-2" name="fullName"><%= request.name %></td>
            <td class="px-4 py-2" name="email"><%= request.email %></td>
            <td class="px-4 py-2"><%= request.issueDescription %></td>
            <td class="px-4 py-2">
              <form action="/admin/update/<%= request._id %>" method="POST" class="flex gap-2">
                <select name="status" class="border rounded p-1">
                  <option <%= request.status === "Pending" ? "selected" : "" %>>Pending</option>
                   <option <%= request.status === "Under Review" ? "selected" : "" %>>Under Review</option>
                  <option <%= request.status === "In progress" ? "selected" : "" %>>In progress</option>
                  <option <%= request.status === "Completed" ? "selected" : "" %>>Completed</option>
                </select>
                <button type="submit" class="bg-blue-600 text-white px-3 py-1 rounded hover:bg-blue-700">
                  Update
                </button>
              </form>
            </td>
          </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </main>
  <div style="position: fixed; bottom: 0; width: 100%;  text-align: center; padding: 10px;">

    <%- include("../partials/footer") %>
  </div>
</body>
</html>
